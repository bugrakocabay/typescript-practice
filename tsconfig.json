{
	"compilerOptions": {
		"lib": ["ESNext", "DOM"],
		"target": "ES6",
		"module": "CommonJS",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "./dist",
		"rootDir": "src",
		"allowSyntheticDefaultImports": true
	},
	"exclude": ["node_modules"],
	"include": ["src/**/*"]
}
